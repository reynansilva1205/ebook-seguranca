    <script>
        // Toggle payment sections
        document.querySelectorAll('.toggle-payment').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const target = this.getAttribute('href').substring(1);
                document.querySelectorAll('.payment-section').forEach(section => {
                    section.style.display = 'none';
                });
                document.getElementById(target).style.display = 'block';
            });
        });

        // Simulate Pix form submission
        document.getElementById('pix-form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Pagamento via Pix simulado! eBook enviado para ' + document.getElementById('email').value + '. (Em produção, verifique comprovante e envie link real.)');
            // Aqui você integraria com backend para enviar e-mail com link do eBook
        });

        // Simulate Card form submission
        document.getElementById('cartao-form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Pagamento via Cartão simulado! eBook enviado para ' + document.getElementById('email-cartao').value + '. (Em produção, processe via gateway.)');
            // Integre com API de pagamento (ex.: Mercado Pago)
        });
    </script>
